<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_cancel_appointment_form" model="ir.ui.view">
        <field name="name">cancel_appointment_form</field>
        <field name="model">cancel.appointment.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="appointment_id" invisible="context.get('hide_appointment')" />
                        <field name="reason"/>
                        <field name="cancellation_date"/>
                    </group>
                    <group>

                    </group>
                </group>
                 <footer>
                        <button name="action_cancel" string="cancel appointment"  type = "object"  class="btn-primary"  data-hotkey="v"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>


            </form>
        </field>


    </record>


    <record id="action_cancel_appointment" model="ir.actions.act_window">
        <field name="name">cancellation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cancel.appointment.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>

    </record>
</odoo>