<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_playground_form" model="ir.ui.view">
        <field name="name">view_playground_form</field>
        <field name="model">odoo.playground</field>
        <field name="arch" type="xml">
            <form string="odoo playground">
                        <group>
                            <field name="model_id"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <button name="action_excute" string="Executed" type="object" class="oe_highlight"/>
                        </group>
                        <group>
                            <field name="result"/>
                        </group>
            </form>
        </field>
    </record>
    <record id="action_playground" model="ir.actions.act_window">
        <field name="name">action_playground</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">odoo.playground</field>
        <field name="view_mode">form</field>
        <field name="target" >inline</field>
    </record>
    <menuitem id="menu_technical" name="Technical" parent="menu_hospital_root" sequence="100">
        <menuitem id="menu_playground" name="playground"  action="action_playground" sequence="10">
        </menuitem>
    </menuitem>
</odoo>