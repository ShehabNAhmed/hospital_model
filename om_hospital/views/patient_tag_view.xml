<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="view_patient_tag_form">
        <field name="name">patient.tag.form</field>
        <field name="model">patient.tag</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="active" widget="boolean_toggle"/>
                            <field name="color" widget="color_picker"/>
                            <field name="color_2" widget="color"/>

                        </group>

                    </group>

                </sheet>

            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="view_patient_tag_tree">
        <field name="name">patient_tag_tree</field>
        <field name="model">patient.tag</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="color" widget="color_picker"/>
                <!--                <field name="color_2" widget="color"/>-->

            </tree>
        </field>
    </record>
    <record model="ir.ui.view" id="view_patient_tag_search">
        <field name="name">patient_tag_search</field>
        <field name="model">patient.tag</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="sequence"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="color" widget="color_picker"/>
                <field name="color_2"/>
            </search>
        </field>
    </record>
    <record model="ir.actions.act_window" id="action_patient_tag">
        <field name="name">patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">patient.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create the first patient</p>
        </field>

    </record>
    <menuitem id="Tag"
              name="Tag"
              action="action_patient_tag"
              parent="menu_configuration"
              sequence="0"/>


</odoo>